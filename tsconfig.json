{
    "compilerOptions": {
      "target": "ES2021",
      "lib": ["ES2021", "DOM"],
      "module": "commonjs",
      "outDir": "./dist",  // Where the compiled JS files go
      "jsx": "react",
      "allowJs": true,
      "checkJs": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
  }